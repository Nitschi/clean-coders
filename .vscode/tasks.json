{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Bowling] build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/specification_testing/BowlingTest/BowlingTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "[Bowling] publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/specification_testing/BowlingTest/BowlingTest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "[Bowling] watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/specification_testing/BowlingTest/BowlingTest.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}